# Server Configuration
NODE_ENV=development
PORT=5000

# Database - MySQL (Prisma)
# Replace 'root' with your MySQL username
# Replace 'password' with your MySQL password
# Replace 'localhost:3306' if MySQL is on a different host/port
# Replace 'admin_panel' with your preferred database name
DATABASE_URL="mysql://root:password@localhost:3306/admin_panel"

# Database - MongoDB (Mongoose)
# Replace with your MongoDB connection string
# The database will be created automatically if it doesn't exist
MONGODB_URI="mongodb://localhost:27017/admin_panel_logs"

# JWT Configuration
# IMPORTANT: Change this to a random string of at least 32 characters in production!
# You can generate one using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars

# JWT token expiration time
# Examples: '1d', '7d', '30d', '1h', '60m'
JWT_EXPIRES_IN=7d

# CORS Configuration
# Frontend URL - change this to your frontend URL in production
CORS_ORIGIN=http://localhost:5173
